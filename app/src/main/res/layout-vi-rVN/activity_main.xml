<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/activity_screen"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/colorScreen">

        <TextView
            android:id="@+id/txtInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@color/colorScreen"
            android:textStyle="normal"
            android:textSize="40sp"
            android:fontFamily="@string/font_fam"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:maxLength="40"
            android:gravity="right"
            android:textColor="@color/colorInput"/>

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@color/colorScreen"
            android:textSize="40sp"
            android:fontFamily="@string/font_fam"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="right"
            android:textColor="@color/colorResult"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_button_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@color/colorLine">
        <LinearLayout
            android:id="@+id/activity_button_horizontal1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".20">
            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C"
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonFunc"
                android:layout_margin="0.5dp"/>
            <Button
                android:id="@+id/btnDiv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=":"
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonFunc"
                android:layout_margin="0.5dp"/>
            <Button
                android:id="@+id/btnMul"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="x"
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonFunc"
                android:layout_margin="0.5dp"/>
            <ImageButton
                android:id="@+id/btnBackSpace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonFunc"
                android:layout_margin="0.5dp"
                android:src="@drawable/backspace"
                android:adjustViewBounds="true"
                android:maxWidth="3dp"
                android:maxHeight="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_button_horizontal2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".20">
            <Button
                android:id="@+id/btnNum7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonNumber"
                android:layout_margin="0.5dp"/>
            <Button
                android:id="@+id/btnNum8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonNumber"
                android:layout_margin="0.5dp"/>
            <Button
                android:id="@+id/btnNum9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonNumber"
                android:layout_margin="0.5dp"/>
            <Button
                android:id="@+id/btnSub"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonFunc"
                android:layout_margin="0.5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_button_horizontal3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".20">
            <Button
                android:id="@+id/btnNum4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonNumber"
                android:layout_margin="0.5dp"/>
            <Button
                android:id="@+id/btnNum5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonNumber"
                android:layout_margin="0.5dp"/>
            <Button
                android:id="@+id/btnNum6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonNumber"
                android:layout_margin="0.5dp"/>
            <Button
                android:id="@+id/btnSum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonFunc"
                android:layout_margin="0.5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_button_horizontal4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".20">
            <Button
                android:id="@+id/btnNum1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonNumber"
                android:layout_margin="0.5dp"/>
            <Button
                android:id="@+id/btnNum2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonNumber"
                android:layout_margin="0.5dp"/>
            <Button
                android:id="@+id/btnNum3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonNumber"
                android:layout_margin="0.5dp"/>
            <Button
                android:id="@+id/btnBracket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="()"
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonFunc"
                android:layout_margin="0.5dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_button_horizontal5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".20">
            <Button
                android:id="@+id/btnNum0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonNumber"
                android:layout_margin="0.5dp"/>
            <Button
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonNumber"
                android:layout_margin="0.5dp"/>
            <Button
                android:id="@+id/btnNeg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+/-"
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonNumber"
                android:layout_margin="0.5dp"/>
            <Button
                android:id="@+id/btnResult"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:textSize="@dimen/buttonTextSize"
                android:fontFamily="@string/font_fam"
                android:background="@color/colorButtonFunc"
                android:layout_margin="0.5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
